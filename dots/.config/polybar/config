[bar/kn]
; fc-list
font-0=IBM Plex Mono:size=11;0
font-1=IBM Plex Mono:style=Bold:size=11;0
font-2=Noto Color Emoji:size=12:scale=11;0
modules-left=public-ip
modules-center=title
modules-right=ewmh filesystem memory cpu temperature backlight battery pulseaudio date
tray-position=right
height=32
module-margin-right=1

[module/date]
type=internal/date
label=%date% %time%
label-font = 1
; https://en.cppreference.com/w/cpp/io/manip/put_time
; ISO-8601 %F and %T
date=%F
date-alt=%c
time=%R
time-alt=%T%z

[module/backlight]
type=internal/backlight
card=intel_backlight
enable_scroll=true
format-prefix="ðŸ’¡ "
format-prefix-font=2

[module/battery]
type=internal/battery
battery=BAT0
adapter=AC
label-charging="ðŸ”Œâ–² %percentage%%"
label-discharging="ðŸ”Œâ–¼ %percentage%%"
label-full="ðŸ”Œ 100%"

[module/cpu]
type=internal/cpu
label=CPU %percentage%%

[module/memory]
type=internal/memory
label=RAM %percentage_used%%

[module/filesystem]
type=internal/fs
mount-0=/
mount-1=/home
mount-2=/tmp
spacing=1
label-mounted=%mountpoint%: %percentage_free%%

[module/pulseaudio]
type=internal/pulseaudio
format-volume=VOL <label-volume>

[module/temperature]
type=internal/temperature
thermal-zone=2
hwmon-path=/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input

[module/ewmh]
type=internal/xworkspaces
enable-scroll=false
label-active-foreground=#00ffff

[module/title]
type = internal/xwindow

[module/public-ip]
type=custom/script
exec=curl --silent --fail https://api.ipify.org
interval=10
format-prefix="ðŸŒŽ "
