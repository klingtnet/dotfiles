# envrionment variables

export EDITOR="vim"
export PAGER="less"
export HISTSIZE=131072

export KN_FULLNAME='Andreas Linz'
export KN_USEREMAIL='klingt.net@gmail.com'
export KN_DEV_PATH="$HOME/personal/dev"

hash git &&
    git config --global user.name "$KN_FULLNAME" &&
    git config --global user.email "$KN_USEREMAIL"

# Sometimes the SSH_AUTH_SOCK is missing after resuming from standby
[[ -n $(pidof ssh-agent) ]] && [[ ! -f "$SSH_AUTH_SOCK" ]]\
    && pkill ssh-agent
[[ -z $(pidof ssh-agent) ]]\
    && ssh-agent > ~/.ssh-agent-config &> /dev/null
[[ -n $(pidof ssh-agent) && -f ~/.ssh-agent-config ]]\
    && eval $(< ~/.ssh-agent-config) &> /dev/null

