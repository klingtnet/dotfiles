" -*- mode: VimL; -*-

set nocompatible              " be iMproved, required
filetype off                  " required

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'
" vim git wrapper
Plugin 'tpope/vim-fugitive'
" NerdTREE file explorer
Plugin 'scrooloose/nerdtree'

" DISABLED: See w0rp/ale
" Syntastic syntax checker
" Plugin 'scrooloose/syntastic'

" ag.vim use `ag` instead of `ack`
Plugin 'rking/ag.vim'
" Ctrl+P vim (sublime text like fuzzy search)
Plugin 'ctrlpvim/ctrlp.vim'
" vim.sensible a set of sane defaults
Plugin 'tpope/vim-sensible'
" rust.vim
Plugin 'rust-lang/rust.vim'
" TOML highlighting
Bundle 'cespare/vim-toml'
" vim-go
Plugin 'fatih/vim-go'
" vim-misc (dependency for `vim-session`)
Plugin 'xolox/vim-misc'
" vim-session manager
Plugin 'xolox/vim-session'
" editorconfig
Plugin 'editorconfig/editorconfig-vim'
" racer plugin for vim (Rust autocompletion)
Plugin 'racer-rust/vim-racer'
" ALE - Asynchronous Lint Engine
Plugin 'w0rp/ale'

" colorschemes
Plugin 'flazz/vim-colorschemes'
Plugin 'NLKNguyen/papercolor-theme'
Plugin 'morhetz/gruvbox'
Plugin 'vim-pandoc/vim-pandoc-syntax'

call vundle#end()
filetype plugin indent on
