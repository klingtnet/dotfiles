[alias]
	a       = add
	c       = commit
	cr      = clone --recursive
	co      = checkout
	cap     = commit --amend --patch --no-edit
	s       = status
	p       = push
	tags    = tag -l
# removes branches merged on remote (thx to http://blogs.atlassian.com/2014/10/advanced-git-aliases/)
	local-prune = !bash -c 'git branch --merged ${1:-master} | grep -v ${1:-master} | xargs -r git branch -d'

[core]
	editor          = vim
	pager           = less
	excludesfile    = ~/.gitignore_global
	autocrlf        = input

[color]
	diff    = auto
	status  = auto
	branch  = auto
	ui      = auto

[diff]
	tool = meld
	algorithm = minimal

[merge]
	ff = false
	tool = meld
	gpgsign = true

[commit]
	gpgsign = true

[tags]
	gpgsign = true

[includeIf "gitdir:~/work/code/"]
	path = ~/work/code/git.inc

[includeIf "gitdir:~/code/"]
	path = ~/code/git.inc
