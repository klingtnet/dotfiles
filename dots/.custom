# user specific settings and things

[[ -d "$HOME/.go" ]]\
	&& export GOPATH=${GOPATH:-~/.go}

[[ ! -d $HOME/bin ]]\
    && mkdir $HOME/bin

[[ -f ~/.pyenvrc ]]\
	&& source ~/.pyenvrc

[[ -d "$HOME/.node_modules" ]]\
	&& export npm_config_prefix="$HOME/.node_modules"

hash ssh-agent &> /dev/null
if [ $? -eq 0 ]; then
# Sometimes the SSH_AUTH_SOCK is missing after resuming from standby
    [[ -n $(pidof ssh-agent) ]] && [[ ! -f "$SSH_AUTH_SOCK" ]]\
        && pkill ssh-agent
    [[ -z $(pidof ssh-agent) ]]\
        && ssh-agent > ~/.ssh-agent-config &> /dev/null
    [[ -n $(pidof ssh-agent) && -f ~/.ssh-agent-config ]]\
        && eval $(< ~/.ssh-agent-config) &> /dev/null
fi

[[ -d "$HOME/.vst" ]]\
	&& export VST_PATH=${VST_PATH:-~/.vst}
