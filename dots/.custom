# user specific settings and things

if [ ! -d $HOME/bin ]; then
    echo "Creating $HOME/bin ..."
    mkdir $HOME/bin
fi

if [ ! -d ${KN_DEV_PATH} ]; then
    echo "Creating ${KN_DEV_PATH} ..."
    mkdir -p ${KN_DEV_PATH}
fi

if [ -d "$HOME/.node_modules" ]; then
    export npm_config_prefix="$HOME/.node_modules"
fi

